// DEFAULT
r_decal_cullsize 1
exec joystick.cfg
exec autoexec.cfg
stuffcmds
startupmenu
sv_unlockedchapters 99

// FRAGMENT ALIASES
alias frag_cb "sixense_clear_bindings"
alias frag_cl "con_logfile ."
alias frag_rm "toggle mat_aaquality"
alias frag_rh "hud_reloadscheme"

// FRAGMENT EXEC
exec frag_info
exec frag_oobe
exec frag_cprimary
exec frag_caccent
exec frag_cnegative
exec frag_cpositive
exec frag_scoreboard

alias frag_customreset "frag_cprimary=def; frag_caccent=def; frag_cnegative=def; frag_cpositive=def; frag_scoreboard=def;"

alias frag_oobe_exec "exec frag_oobe_exec"
exec frag_oobe_dismissed.txt
frag_oobe_exec

// FRAGMENT SETTINGS
vgui_cache_res_files 0
cl_hud_minmode 0
alias cl_hud_minmode ""
con_timestamp 0
wait 20; showconsole; wait 10; toggle mat_aaquality; hideconsole

// FORCE REFRACTS TO WORK
mat_motion_blur_enabled 1
mat_motion_blur_strength 0
mat_disable_bloom 1
mat_hdr_level 0
mat_antialias 0
mat_colcorrection_disableentities 1
mat_colorcorrection 0
glow_outline_effect_enable 0 // MAKE REFRACTS WORK IN SPECTATOR MODE